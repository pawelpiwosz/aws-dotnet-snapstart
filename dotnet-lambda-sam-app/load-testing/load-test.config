# Load Testing Configuration
# Modify these values to customize your load tests

# Base URL for your API Gateway
BASE_URL="<known_after_deployment>"

# Load test parameters
TOTAL_REQUESTS=1000      # Total number of requests per endpoint
CONCURRENT_USERS=25      # Number of concurrent users

# Alternative configurations for different test scenarios:

# Light load testing (good for initial testing)
# TOTAL_REQUESTS=100
# CONCURRENT_USERS=5

# Medium load testing (balanced testing)
# TOTAL_REQUESTS=500
# CONCURRENT_USERS=15

# Heavy load testing (stress testing)
# TOTAL_REQUESTS=2000
# CONCURRENT_USERS=50

# Stress testing (maximum load)
# TOTAL_REQUESTS=5000
# CONCURRENT_USERS=100

# Test intervals
WARM_UP_REQUESTS=3       # Number of warm-up requests per endpoint
WAIT_BETWEEN_TESTS=30    # Seconds to wait between endpoint tests

# Results configuration
RESULTS_DIR="load-test-results"
GENERATE_CHARTS=true     # Set to false to skip chart generation
SAVE_RAW_DATA=true      # Set to false to skip saving raw ab output

# Endpoint testing order (comment out to skip specific endpoints)
TEST_ENDPOINTS=(
    "optimized-snapstart"
    "optimized"
    "update-counter"
    "non-performant-snapstart"
    "non-performant"
)

# Performance thresholds for analysis (in milliseconds)
EXCELLENT_THRESHOLD=500   # Under 500ms is excellent
GOOD_THRESHOLD=1000      # Under 1000ms is good  
ACCEPTABLE_THRESHOLD=2000 # Under 2000ms is acceptable
# Over 2000ms is considered poor

# Failure rate thresholds (percentage)
MAX_ACCEPTABLE_FAILURE_RATE=1  # 1% max acceptable failure rate

# Apache Bench options
AB_TIMEOUT=30            # Request timeout in seconds
AB_KEEPALIVE=false       # Use keep-alive connections (true/false)
AB_VERBOSITY=1           # Verbosity level (0-4)

# Output formatting
USE_COLORS=true          # Enable colored output
SHOW_PROGRESS=true       # Show progress indicators
GENERATE_SUMMARY=true    # Generate summary report
